{
    "name": "web-form",
    "homepage": "http://vakor03.github.io/WebForm",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "5.0.0",
        "web-vitals": "^2.1.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "lint": "eslint . --ignore-path .gitignore",
        "lint:fix": "eslint . --fix --ignore-path .gitignore",
        "format": "prettier --ignore-path .gitignore --check .",
        "format:fix": "prettier --ignore-path .gitignore . --write",
        "lint:style": "stylelint --ignore-path .gitignore \"./**/*.css\"",
        "lint:style:fix": "npm run lint:style --ignore-path .gitignore -- --fix",
        "prepare": "husky install",
        "stylelint-check": "stylelint-config-prettier-check",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@emailjs/browser": "^3.3.1",
        "@nodeart/eslint-plugin": "^1.3.0",
        "@nodeart/stylelint-config-nodeart": "0.0.4",
        "eslint": "^7.32.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-react": "^7.25.2",
        "husky": "^7.0.2",
        "prettier": "2.4.1",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "stylelint-declaration-use-variable": "^1.7.3"
    }
}
